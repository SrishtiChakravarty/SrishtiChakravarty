#include <iostream>
using namespace std;


class student{
    public:
    string name;
    int age;
    bool gender;
    
    void printinflo(){
        cout<<"name"<<endl;
        cout<<name;
        cout<<"AGE"<<endl;
        cout<<age;
        cout<<"GENDER"<<endl;
        cout<<gender;
    }
    
    
};

int main() {
	
	student arr[3];
	
	for(int i=0;i<3;i++){
	    cout<<"Name ="<<endl;
	    cin>>arr[i].name;
	    cout<<"AGE ="<<endl;
	    cin>>arr[i].age;
	    cout<<"Gender ="<<endl;
	    cin>>arr[i].gender;
	}
	
	for(int i=0;i<3;i++){
	    arr[i].printinflo();
	}
	
	return 0;
}
