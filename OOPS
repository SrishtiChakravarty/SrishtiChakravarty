function to acess private data members 


#include <iostream>
using namespace std;


class student{
    string name;
    public:
    
    int age;
    bool gender;
    
    void setname(string s){
        name=s;
        
    }
    
    void printinflo(){
        cout<<"name"<<endl;
        cout<<name;
        cout<<"AGE"<<endl;
        cout<<age;
        cout<<"GENDER"<<endl;
        cout<<gender;
    }
    
    
};

int main() {
	
	student arr[3];
	
	for(int i=0;i<3;i++){
	    string s;
	    cout<<"Name ="<<endl;
	    //cin>>arr[i].name;
	    cin>>s;
	    arr[i].setname(s);
	    cout<<"AGE ="<<endl;
	    cin>>arr[i].age;
	    cout<<"Gender ="<<endl;
	    cin>>arr[i].gender;
	}
	
	for(int i=0;i<3;i++){
	    arr[i].printinflo();
	}
	
	return 0;
}

