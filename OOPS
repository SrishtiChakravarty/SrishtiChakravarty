------------------------------------------------------------------------------------------------------------------------------------------------------------------
Constructor in C++
#include <iostream>
using namespace std;


class student{
    string name;
    public:
    
    int age;
    bool gender;
    
    student(){
        cout<<"default constructor"<<endl;    }
    
    student(string s,int a, int g){
        cout<<"Parameterised constructor"<<endl;
        name=s;
        age=a;
        gender=g;
    }
    
    student(student &a){
        cout<<"copy constructor"<<endl;
        name=a.name;
        age=a.age;
        gender= a.gender;
        
        
    }
    
    void setname(string s){
        name=s;
        
    }
    
    
    
    void printinflo(){
        cout<<"name"<<endl;
        cout<<name;
        cout<<"AGE"<<endl;
        cout<<age;
        cout<<"GENDER"<<endl;
        cout<<gender;
    }
    
    
};

int main() {
	
